<Window x:Class="唐僧解瓦.样板.UIs.ViewSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:唐僧解瓦.样板.UIs"
             mc:Ignorable="d" Width="334.646" Height="238.582">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="5">
                <StackPanel Orientation="Vertical" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="源视图"></TextBlock>
                        <ComboBox Name="sourceView" Width="100"></ComboBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="5" Width="100">
                    <ListView BorderBrush="Aqua" BorderThickness="4" Name="targetViewList"   MinHeight="150" MinWidth="100">
                    </ListView>
                </StackPanel>
                <Button Content="OK" Name="okBtn" Width="60" Height ="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0" Click="OkClicked"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
