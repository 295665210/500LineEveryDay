        <Button Name="BtnOpen" Height="50" Width="100" Content="打开子窗体" Click="BtnOpen_Click" />
        <TextBox Name="TextBox"  Height="50" Width="100" TextChanged="TextBox_TextChanged" ></TextBox>


    </StackPanel>
</Window>