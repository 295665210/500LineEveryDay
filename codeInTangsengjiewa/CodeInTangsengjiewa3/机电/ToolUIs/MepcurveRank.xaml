                    <Grid Background="#FFE5E5E5">
                        <RadioButton Content="按管外壁" HorizontalAlignment="Left" Margin="19,35,0,0"
                                     VerticalAlignment="Top" />
                        <RadioButton Content="按管中" HorizontalAlignment="Left" Margin="139,35,0,0"
                                     VerticalAlignment="Top" IsChecked="True" />
                        <TextBlock HorizontalAlignment="Left" Margin="26,113,0,0" TextWrapping="Wrap" Text="分布间距"
                                   VerticalAlignment="Top" />
                        <TextBox Name="horizontalDis" HorizontalAlignment="Left" Height="23" Margin="108,113,0,0"
                                 TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="120"
                                 HorizontalContentAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem Header="上下分布">
                    <Grid Background="#FFE5E5E5" />
                </TabItem>
            </TabControl>
            <Button Content="一键分布" HorizontalAlignment="Left" Height="27" Margin="64,2,0,0" VerticalAlignment="Top"
                    Width="112" Click="ButtonBase_OnClick" />
        </TabPanel>
    </Grid>


</Window>